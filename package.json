{
  "name": "match-plus",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "lint:fix": "eslint src/**.ts --fix",
    "lint:watch": "npm-watch \"lint:fix\"",
    "build": "node build.cjs",
    "test": "c8 ava"
  },
  "type": "module",
  "files": [
    "dist/"
  ],
  "ava": {
    "files": ["build/test/*"],
    "typescript": {
      "rewritePaths": {
        "src/": "build/src/"
      },
      "compile": "tsc"
    }
  },
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "watch": {
    "lint:fix": {
      "patterns": [
        "src",
        "test"
      ],
      "extensions": "ts",
      "delay": 1,
      "quiet": true,
      "runOnChangeOnly": true
    }
  },
  "author": "krokkadial",
  "license": "MIT",
  "devDependencies": {
    "@ava/typescript": "^4.1.0",
    "@types/node": "^20.6.2",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "ava": "^5.3.1",
    "c8": "^8.0.1",
    "esbuild": "^0.19.3",
    "eslint": "^8.49.0",
    "npm-dts": "^1.3.12",
    "npm-watch": "^0.11.0",
    "sinon": "^16.0.0",
    "typescript": "^5.2.2"
  }
}
